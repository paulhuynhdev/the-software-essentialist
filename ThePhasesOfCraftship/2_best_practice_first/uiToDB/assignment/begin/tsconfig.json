{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES6",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "strict": true,
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    "resolveJsonModule": true,
    "paths": {
      "@dddforum/backend/*": [
        "./packages/backend/*"
      ],
      "@dddforum/frontend/*": [
        "./packages/frontend/*"
      ],
      "@dddforum/shared/*": [
        "./packages/shared/*"
      ]
    }
  }
}